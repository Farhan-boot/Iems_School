@model List<EMS.DataAccess.Data.Aca_ClassNotice>
@if (Model.Count == 0)
{
    <div class="alert alert-warning fade in radius-bordered alert-shadowed">
        <i class="fa-fw fa fa-sticky-note"></i>
        <strong>Not Found!</strong> There is no Notice posted for this Course.
    </div>
}
else
{
    <div class="panel-group accordion" id="accordions">
        @foreach (var notice in Model)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a class="accordion-toggle collapsed" data-toggle="collapse"
                           data-parent="#accordions" href="#@notice.Id.ToString()" aria-expanded="false">
                            <i class="fa-fw fa fa-envelope"></i> @notice.PostDate.ToString("yyyy-MM-dd ddd hh:mm:ss tt").ToUpper() | <strong>@notice.Subject</strong>
                        </a>
                    </h4>
                </div>
                <div id="@notice.Id.ToString()" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                    <div class="panel-body border-red">@notice.Description</div>
                </div>
            </div>
        }
    </div>
}