@using EMS.Framework.Utils
@model dynamic

@{
    ViewBag.Title = "Current Borrows";
}

@if (HttpUtil.Profile.UserId == 24262)
{
    <div id="main-content">
        <div>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <h4>Borrow Status</h4>
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 25%; vertical-align: middle">
                            <label>Total Books Borrowed : </label>
                        </td>
                        <td colspan="5" style="width: 20%; text-align: left;">
                            0
                        </td>
                        <td style="width: 25%; vertical-align: middle">
                            <label>Activation Status : </label>
                        </td>
                        <td style="width: 20%; text-align: left;">
                            Active Borrower
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 25%; vertical-align: middle">
                            <label>Borrow Limit : </label>
                        </td>
                        <td colspan="5" style="width: 20%; text-align: left;">
                            3
                        </td>
                        <td style="width: 25%; vertical-align: middle">
                            <label>Credit Limit : </label>
                        </td>
                        <td style="width: 20%; text-align: left;">
                            500
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <h4>Current Borrows</h4>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align: center">#</th>
                        <th style="text-align: center">Barcode</th>
                        <th style="text-align: center">Title</th>
                        <th style="text-align: center">Edition</th>
                        <th style="text-align: center">Date Borrowed</th>
                        <th style="text-align: center">Expected Return Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
}
else
{
    <h2>Under Construction</h2>
}
