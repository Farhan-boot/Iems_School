    <script src="~/Areas/HR/Views/EmployeeRegistration/Index.js"></script>
}

<div class="page-body" ng-controller="EmployeeRegistrationCtrl"
     ng-init="Init(
     '@Url.HttpRouteUrl("DefaultApi", new {controller = "EmployeeRegistrationApi", action = "GetEmployee", area = "Employee"})',
     '@Url.HttpRouteUrl("DefaultApi", new {controller = "EmployeeRegistrationApi", action = "GetEmployeeDataExtra", area = "Employee"})',
     '@Url.HttpRouteUrl("DefaultApi", new {controller = "EmployeeRegistrationApi", action = "GetEmployeeAppointmentHistory", area = "Employee"})',
