    <div id="progress" ng-show="IsLoading>0" style="display: block; position: fixed; top: 0; background: rgba(255, 255, 255, 0.75); right: 0; width: 100%; height: 100%; z-index: 500; text-align: center; padding: 20% 10%; color: #3bad29;">
        <i class="fa fa-refresh fa-spin fa-5x fa-fw margin-bottom" style="font-size: 100px;"></i>
    </div>
    <div id="registration-form">
        <form role="form">
            <div class="well bordered-top bordered-bottom bordered-blue text-center ">
                <div class="row">
                    <div class="col-sm-2">
                        <img src="@SiteSettings.Instance.InstituteLogoColorSolo" style="width: 135px;"/>
                    </div>
                    <div class="col-sm-8">
                        <h1 style="color: #2e3192;">@SiteSettings.Instance.InstituteName (@SiteSettings.Instance.InstituteShortName)
                        </h1>
                        <h2 style="color: #3bad29;">Employee Registration Form</h2>
                        <div class="alert alert-warning fade in no-margin">
                            <strong>
                                You must fill-up the mandatory fields marked as (<span  class="red glyphicon glyphicon-asterisk"></span>).<br />
                                All field of this form are fillable in English language, except only where is instructed in Bengali language.
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-hide="messagesSuccess==null" class="alert alert-success fade in radius-bordered alert-shadowed">
                <button class="close" data-dismiss="alert">×</button>
                <i class="fa-fw fa fa-check"></i>
                {{messagesSuccess}}
            </div>
            <div ng-hide="messages==null" class="alert alert-danger fade in radius-bordered alert-shadowed">
                <button class="close" data-dismiss="alert">×</button>
                <i class="fa-fw fa fa-warning"></i>
                {{messages}}
            </div>
            <div class="form-title">
                Personal Information
            </div>
