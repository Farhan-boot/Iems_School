@{
    ViewBag.Title = "Degree Complete Print";

    //WebApi link for single row
    var getProgramWiseDegreeCompletePrintDataExtraUrl = Url.HttpRouteUrl("DefaultApi", new { controller = "ProgramWiseDegreeCompletePrintApi", action = "GetProgramWiseDegreeCompletePrintDataExtra", area = "ExamSection" });

    var getProgramWiseDegreeCompletePrintUrl = Url.Action("ProgramWiseDegreeCompletePrint", "Report", new { area = "ExamSection" });

}
@section ScriptSection
{
    <script src="~/Areas/ExamSection/Views/Report/ProgramWiseDegreeCompleteManager.js"></script>
}
<div ng-controller="ProgramWiseDegreeCompleteManagerCtrl"
     ng-init="Init(
      '@getProgramWiseDegreeCompletePrintDataExtraUrl'
     )">
    <div class="widget">
        <div class="widget-header bordered-bottom bordered-sky ">
            <i class="widget-icon fa fa-list bold  "></i>
            <span class="widget-caption "><b> </b></span>
        </div>
        <div class="widget-body">
            <div class="row">
                <!--text type-->
                <div class="col-lg-12 col-sm-12 col-xs-12">
                    <table class="table table-bordered " style="max-width: 700px">
                        <tr>
                            <td style="width: 130px">Semester</td>
                            <td>
                                <select ng-model="SelectedSemesterId"
                                        ng-change="getOfferedCourseList()"
                                        ng-options="option.Id as option.Name for option in SemesterList " ng-init="" class="form-control">
                                    <option value="" label="" class="">---Select Semester---</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Program </td>
                            <td>
                                <select ng-model="SelectedProgramId"
                                        ng-change="getOfferedCourseList()"
                                        ng-options="option.Id as option.ShortTitle for option in ProgramList " ng-init="" class="form-control">
                                    <option value="" label="" class="">---Select Program Type---</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <a @*ng-hide="SelectedClassSectionId==0 || SelectedSemesterId==0 || OfferedClassSectionList.length<=0"*@
                                   style="" target="_blank" href="@(getProgramWiseDegreeCompletePrintUrl)/?semesterId={{SelectedSemesterId}}&programId={{SelectedProgramId}}&itemPerPage=35" class="btn btn-xs btn-success"><i class="fa fa-print"></i>Print Degree Complete Std List</a>
                            </td>
                        </tr>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>