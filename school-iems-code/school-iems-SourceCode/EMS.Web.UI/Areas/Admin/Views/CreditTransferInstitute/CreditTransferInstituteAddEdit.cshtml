
<!--File:Aca_CreditTransferInstitute Add/Edit View-->
@using EMS.DataAccess.Data;
@{
    ViewBag.Title = "Admin: Add/Edit Credit Transfer Institute";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    // Angular Properties
    var id = Request.QueryString["id"];//ViewContext.RouteData.Values["id"];
    var CreditTransferInstituteId = (string) id == null?"0":(string)id;

    //Aca_CreditTransferInstitute WebApi Single Row link   
    var getCreditTransferInstituteByIdUrl = Url.HttpRouteUrl("DefaultApi", new { controller = "CreditTransferInstituteApi", action = "GetCreditTransferInstituteById", area = "Admin" });
    var getCreditTransferInstituteDataExtraUrl = Url.HttpRouteUrl("DefaultApi", new { controller = "CreditTransferInstituteApi", action = "GetCreditTransferInstituteDataExtra", area = "Admin" });
    var saveCreditTransferInstituteUrl = Url.HttpRouteUrl("DefaultApi", new { controller = "CreditTransferInstituteApi", action = "SaveCreditTransferInstitute", area = "Admin" });
    var deleteCreditTransferInstituteByIdUrl = Url.HttpRouteUrl("DefaultApi", new { controller = "CreditTransferInstituteApi", action = "GetDeleteCreditTransferInstituteById", area = "Admin" });

    //Aca_CreditTransferInstitute WebApi List link 
    var getPagedCreditTransferInstituteUrl = Url.HttpRouteUrl("DefaultApi", new {controller = "CreditTransferInstituteApi", action = "GetPagedCreditTransferInstitute", area = "Admin" });
    var getAllCreditTransferInstituteUrl = Url.HttpRouteUrl("DefaultApi", new { controller = "CreditTransferInstituteApi", action = "GetAllCreditTransferInstitute", area = "Admin" });
    var saveCreditTransferInstituteListUrl = Url.HttpRouteUrl("DefaultApi", new { controller = "CreditTransferInstituteApi", action = "SaveCreditTransferInstituteList", area = "Admin" });
    var getCreditTransferInstituteListDataExtraUrl = Url.HttpRouteUrl("DefaultApi", new { controller = "CreditTransferInstituteApi", action = "GetCreditTransferInstituteListDataExtra", area = "Admin" });

    var editCreditTransferInstituteByIdPageUrl = Url.Action("CreditTransferInstituteAddEdit", "CreditTransferInstitute", new { area = "Admin" });
    var listCreditTransferInstitutePageUrl = Url.Action("CreditTransferInstituteList", "CreditTransferInstitute", new { area = "Admin" });

    //Aca_CreditTransferInstitute Angular Functions
    string getCreditTransferInstituteById="getCreditTransferInstituteById";
    var saveCreditTransferInstitute = "saveCreditTransferInstitute";
    var getNewCreditTransferInstitute = "getNewCreditTransferInstitute";
    var refreshPage = "loadPage()";
    string deleteCreditTransferInstituteById="deleteCreditTransferInstituteById";
    string loadCreditTransferInstituteExtraData="loadCreditTransferInstituteExtraData";
}
@section ScriptSection
{
    <script src="~/Areas/Admin/Views/CreditTransferInstitute/CreditTransferInstituteAddEdit.js"></script>
}

<div id="CreditTransferInstituteAddEdit" class="row" ng-controller="CreditTransferInstituteAddEditCtrl" ng-init="Init(
      '@CreditTransferInstituteId'
      ,'@getCreditTransferInstituteByIdUrl'
      ,'@getCreditTransferInstituteDataExtraUrl'
      ,'@saveCreditTransferInstituteUrl'
      ,'@deleteCreditTransferInstituteByIdUrl')">
      
    <div class="col-lg-12 col-sm-12 col-xs-12">
     <div ng-Hide="!HasError ||ErrorMsg==''" class="alert alert-danger fade in radius-bordered alert-shadowed">
            <button ng-click="HasError=false" class="close" data-dismiss1="alert">×</button>
            <i class="fa-fw fa fa-warning"></i>
            <strong>Attention Please!</strong> {{ErrorMsg}}
      </div>
      <div ng-show="HasViewPermission">
        <div class="widget" >
            <div class="widget-header bordered-bottom bordered-sky ">
                <i class="widget-icon fa fa-edit bold  "></i>
                <span class="widget-caption ">
                    Add/Edit
                    <strong ng-show="CreditTransferInstitute.@Aca_CreditTransferInstitute.Property_Name!=''">{{(CreditTransferInstitute.@Aca_CreditTransferInstitute.Property_Name)}}</strong>
                </span>
                <div class="widget-buttons buttons-bordered no-padding-right" style="display: none">
                    <span class="input-icon">
                        <input type="text" ng-model="CreditTransferInstituteId" ng-Enter="@(getCreditTransferInstituteById)()" class="form-control input-xs " id="glyphicon-search" placeholder="Search" >
                        <i class="glyphicon glyphicon-search blue"></i>
                    </span>
                  
                </div>
                <div class="widget-buttons no-padding-left">
                    <button ng-click="@(getNewCreditTransferInstitute)()" class="btn btn-success btn-xs"><i class="fa fa-plus"></i> Add New</button>
                    <a href="@(listCreditTransferInstitutePageUrl)" class="btn btn-blue btn-xs"><i class="fa fa-arrow-left" target="_blank"></i> Back To List</a>
                    <button ng-click="@refreshPage" class="btn btn-info btn-xs"><i class="fa fa-refresh"></i> Refresh</button>
                </div>
            </div><!--Widget Header end-->
            <div class="widget-body">
                <div class="row">
                  <div class="col-md-6 table-form">
                     <table class="form" width="100%" border="0" cellspacing="2" cellpadding="3">
                        <tbody>
                             <tr>
                                <td class="fieldlabel">Name <span class="red glyphicon glyphicon-asterisk"></span></td>
                                <td class="fieldarea">
                                    <input type="text" ng-model="CreditTransferInstitute.@Aca_CreditTransferInstitute.Property_Name" class="form-control" placeholder="Enter Name" maxlength="255" required="" />
                                </td>
                                <td class="fieldarea-tooltip"><span><i class="fa fa-question-circle" data-title="Enter Name." data-toggle="tooltip"></i></span></td>
                            </tr>
                             <tr>
                                <td class="fieldlabel">Is Disabled </td>
                                <td class="fieldarea">
                                    <label class="checkbox-inline">
                                    <input type="checkbox" ng-model="CreditTransferInstitute.@Aca_CreditTransferInstitute.Property_IsDisabled"  />
                                    </label>
                                </td>
                                <td class="fieldarea-tooltip"><span><i class="fa fa-question-circle" data-title="Check Is Disabled if required." data-toggle="tooltip"></i></span></td>
                             </tr>
                        
                   

                            </tbody>
                        </table>
                    </div><!--Col end-->
                </div><!--Row end-->
            </div><!--Widget Body end-->
            <div class="widget-footer text-center">
                <div class="row">
                    <div class="col-md-6 text-center">
                        <button ng-click="@(saveCreditTransferInstitute)()" class="btn btn-md btn-success"><span class="fa fa-save"></span> Save</button>
                     </div>
                </div>
            </div>
        </div>
      </div><!--view permission end-->
    </div>
</div><!--controller end-->



