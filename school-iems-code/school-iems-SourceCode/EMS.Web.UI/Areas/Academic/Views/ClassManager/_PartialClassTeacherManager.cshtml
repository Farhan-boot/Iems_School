}

<div class="widget-header bordered-bottom bordered-sky">
    <i class="widget-icon fa fa-user-secret"></i>
    <span  class="widget-caption">Manage Teachers</span>
    <div class="widget-buttons buttons-bordered">
        <button ng-click="refreshClassTeachers()" class="btn btn-xs btn-info"><i class="fa fa-refresh"></i> Refresh</button>
    </div>
</div>
<div class="widget">
    <div class="widget-header bordered-bottom bordered-green">
        <i class="widget-icon fa fa-users"></i>
        <span  class="widget-caption">Faculty</span>
        <label style="margin-left: 30px;">
            <input ng-model="isShowTrashedFaculty"
                   ng-change="refreshClassTeachers()"
                   type="checkbox" style="margin-top: 0px !important; vertical-align: middle; width: 18px;"/>
            <span style="color: #e74b37;">Show Deleted Faculty Only</span>
        </label>
        <div class="widget-buttons buttons-bordered">
            <button ng-click="searchTeachers(@((byte) Aca_ClassTakenByEmployee.RoleEnum.Faculty))"
                    type="button" class="btn btn-xs btn-success"
                    data-toggle="modal" data-target="#addCourseTeachersModal">
                <i class="fa fa-plus"></i> Add New Faculty
            </button>
        </div>
        <div class="widget-buttons compact">
            <a href="#" data-toggle="maximize">
                <i class="fa fa-expand"></i>
            </a>
            <a href="#" data-toggle="collapse">
                <i class="fa fa-minus"></i>
            </a>
        </div>
    </div>
    <div class="widget-body">
        <table class="table table-striped table-bordered table-hover">
            <thead class="bordered-blue">
                <tr>
                    <th class="text-center">SN</th>
                    <th class="text-center">User ID</th>
                    <th class="text-center">Name</th>
                    @*<th class="text-center">Enroll Type</th>*@
                    <th class="text-center">Position</th>
                    <th class="text-center">Department</th>
                    <th class="text-center">Status</th>
                    <th class="text-center" style="width: 70px;">Action</th>
                </tr>
            </thead>
