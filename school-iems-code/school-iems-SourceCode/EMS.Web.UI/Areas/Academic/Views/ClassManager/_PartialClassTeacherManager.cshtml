        <!--History Modal Start-->
        <div class="modal fade" id="classTakenByTeacherHistoryModal" tabindex="-1" role="dialog" aria-labelledby="classTakenByTeacherHistoryModal">
            <div class="modal-dialog modal-lg" role="document">
