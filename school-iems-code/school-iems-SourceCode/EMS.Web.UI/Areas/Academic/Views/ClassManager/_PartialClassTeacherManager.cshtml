                @*<td class="text-center padding-2">
                    <select ng-model="row.@Aca_ClassTakenByEmployee.Property_RoleEnumId"
                            ng-options="option.Id as option.Name for option in EmployeeRoleEnumList "
                            ng-init="" class="form-control padding-2"></select>
                </td>*@
                <td class="text-center padding-2">
                    @*<select ng-model="row.@Aca_ClassTakenByEmployee.Property_SectionEnumId"
                            ng-options="option.Id as option.Name for option in EmployeeSectionEnumList "
                            ng-init="" class="form-control padding-2"></select>*@
                </td>
                <td class="text-center padding-2">
                    @*<select ng-model="row.@Aca_ClassTakenByEmployee.Property_StatusEnumId"
                            ng-options="option.Id as option.Name for option in EmployeeStatusEnumList "
                            ng-init="" class="form-control padding-2"></select>*@
                </td>
                <td class="text-center padding-2">
                    <select ng-model="row.@Aca_ClassTakenByEmployee.Property_StatusEnumId"
                            ng-options="option.Id as option.Name for option in EmployeeStatusEnumList "
                            ng-init="" class="form-control padding-2"></select>
                </td>
                <td class="text-center">
