                                        <tbody>
                                        <tr>
                                            <td style="text-align: left;padding: 5px !important;" ng-bind-html="renderHtml(ClassTakenByEmployeeHistoryMsg)"></td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning text-center" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
                    </div>
                </div>
            </div>
        </div>
        <!--History Modal End-->
    </div>
</div>
