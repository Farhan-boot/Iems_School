@using BeyondThemes.Bootstrap
@using EMS.Framework.Settings

@model EMS.Web.UI.Models.LoginViewModel
@{
    ViewBag.Title = "Student & Employee Portal Login ";
    //ViewBag.Description = SiteSettings.Instance.ProductFullName;
    //Layout = "~/Views/Shared/_LayoutThemeCore.cshtml";
    //Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.FormTitle = "Login to i-EMS";
    var returnUrl = Request.QueryString["ReturnUrl"];

}

@section StyleSection
{
}
@section ScriptSection {
   
}

<div class="login-form" style="padding: 0 15px; margin-top: 15px">
    <div class="form-group">
        @*<label  class="label">Username</label>*@
        @*<input type="text" class="form-control" placeholder="Enter Name">*@
        @Html.LabelFor(t => t.UserName, new { @class = "input-label" })
        @Html.TextBoxFor(t => t.UserName, new { @class = "form-control", placeholder = "User ID" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @*<label for="label" class="">Password</label>
            <input type="password" class="form-control" placeholder="Enter Password">*@
        @Html.LabelFor(t => t.Password, new { @class = "input-label" })
        @Html.PasswordFor(t => t.Password, new { @class = "form-control", placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <div class="row form-check">
        <div class="col-md-12">
            @*<button type="submit" class="btn btn-login float-right">Login</button>*@
            @Html.Bootstrap().SubmitButton().Text("Login").HtmlAttributes("class=''").Color(BootstrapColors.Primary).ButtonBlock().Shiny().IconPrepend("glyphicon glyphicon-log-in")
        </div>
        <div class="col-md-12" style="text-decoration: none !important; padding-top: 18px; text-align: center;">
            <span>
                <a href="@Url.Action("Index", "Reset")" style="font-size: 12px; color: red;">Forgot Password?</a>
            </span>
        </div>
    </div>
</div>


